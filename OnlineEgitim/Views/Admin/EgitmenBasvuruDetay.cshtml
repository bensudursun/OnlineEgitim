@model ViewModel
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/Admin.css" rel="stylesheet" />
    <style>
        .avatar {
            vertical-align: middle;
            width: 250px;
            height: 160px;
            border-radius: 50%;
        }
    </style>
</head>
<header role="banner">
    <h1>BS</h1>
    <ul class="utilities">
        <br>
        <li class="users"><a href="/Admin/AdminProfil"> @Session["kullaniciad"]</a></li>
        <li class="logout warn"><a href="/Giris/AdminCikis">Çıkış Yap</a></li>
    </ul>
</header>

<nav role='navigation'>
    <ul class="main">
        <li class="dashboard"><a href="/Admin/AdminAnasayfa">Yönetim Paneli</a></li>
        <li class="users"><a href="/Admin/Kullanicilar">Kullanıcılar</a></li>
        <li class="write"><a href="/Admin/Egitmenler">Eğitmenler</a></li>
        <li class="write"><a href="/Admin/EgitmenBasvuru">Basvurular</a></li>
        <li class="comments"><a href="/Admin/Egitimler">Eğitimler</a></li>
    </ul>
</nav>

<main role="main">

    <section class="panel important">
        <h2>Başvuru Detay</h2>
    </section>

    <section class="panel important">

        <div class="d-flex align-items-start ms-5 mt-4">

            <div class="tab-content " id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                    <div class="container  w-100 mb-5 ">

                        <div class="container">

                            <div class="col-md-12">

                                @using (Html.BeginForm("EgitmenOnay", "Admin", FormMethod.Post))
                                {
                                    <div class="container" id="egitmen">
                                        @if (Model.EgitimVerens == null || Model.EgitimVerens != null)
                                        {
                                            foreach (var o in Model.EgitimVerens)
                                            {

                                                <p> <b>Ad Soyad: </b>&nbsp;  @o.Adi &nbsp; @o.Soyad</p>

                                                <p> <b>Email:</b> &nbsp; @o.Email </p>
                                                <p><b>Eğitim Durumu:</b>  &nbsp; @o.EgitimDurumu </p>
                                                <p><b>Üniversite:</b> &nbsp; @o.Universite </p>
                                                <p><b>Hakkında:</b>  &nbsp; @o.Hakkimda </p>
                                                <a class="btn btn-warning Onayla" style="width:60px; height:45px; text-align:center; color:white " data-id="@o.egitimVerenId">Onayla</a>

                                            }
                                        }
                                        @if (Model.Egitims == null || Model.Egitims != null)
                                        {
                                            foreach (var o in Model.Egitims)
                                            {

                                                <p> <b>Eğitim Başlığı: </b>&nbsp;  @o.EgitimBasligi </p>

                                                <p> <b>Açıklama:</b> &nbsp; @o.Aciklama </p>
                                                <p> <b>Açıklama:</b> &nbsp; @o.Kategori.Kategoriad </p>

                                            }
                                        }
                                    </div>
                                }
                                <button class="btn btn-danger">Reddet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/bootbox.js"></script>
<script src="~/Scripts/bootstrap.bundle.js"></script>
<script>
    $(function () {
        $('#egitmen').on("click", ".Onayla", function () {
            var btn = $(this);
            bootbox.confirm("Onaylamak istediğinize emin misiniz?", function (result) {
                if (result) {
                    var id = btn.data("id");
                    $.ajax({
                        type: "POST",
                        url: "/Admin/EgitmenOnay/" + id,

                    }).fail(function () {
                        bootbox.confirm('Öğrenciye ait ders bulunmamaktadır.');

                    });
                }
            })

        });
    });
</script>